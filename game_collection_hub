    <script>
        // JavaScript pour le lien d'assistance (réutilisé de l'ancien code)
        const assistanceLink = document.getElementById('assistance-link');
        assistanceLink.addEventListener('click', (event) => {
            event.preventDefault();

            // Utilisation de window.prompt pour la confirmation (si vous préférez une modale, je peux la recréer)
            const userConfirmed = window.prompt("Voulez-vous rejoindre notre serveur Discord pour l'assistance ? Tapez 'oui' pour confirmer.");

            if (userConfirmed && userConfirmed.toLowerCase() === 'oui') {
                window.open("https://discord.gg/AX2VKE7A", "_blank");
            } else {
                console.log("Accès Discord annulé par l'utilisateur.");
            }
        });
    </script>
